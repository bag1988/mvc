@model IEnumerable<mvc.Models.Base.module>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nameModule)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.defaultHtml)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.defaultCss)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.urlModule)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nameModule)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.defaultHtml)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.defaultCss)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.urlModule)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.idModule">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.idModule">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.idModule">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
